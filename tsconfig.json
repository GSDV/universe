{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "paths": {
            "@assets/*": ["./assets/*"],
            "@components/*": ["./src/components/*"],
            "@hooks/*": ["./src/hooks/*"],
            "@providers/*": ["./src/providers/*"],
            "@screens/*": ["./src/screens/*"],
            "@util/*": ["./src/util/*"],
            "@/*": ["./*"]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        ".expo/types/**/*.ts",
        "expo-env.d.ts",
        "app/(tabs)/_layout.tsx"
    ]
}