{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "paths": {
            "@assets/*": ["./src/assets/*"],
            "@api/*": ["./src/api/*"],
            "@components/*": ["./src/components/*"],
            "@styles/*": ["./src/styles/*"],
            "@util/*": ["./src/util/*"],
            "@/*": ["./*"]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        ".expo/types/**/*.ts",
        "expo-env.d.ts"
    ]
}
